{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HytaleRU.app",
  "version": "1.0.0",
  "identifier": "com.aer.hytaleru-app",

  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Hytale RU",
        "width": 550,
        "minWidth": 550,
        "maxWidth": 550,
        "height": 650,
        "minHeight": 650,
        "maxHeight": 650,
        "fullscreen": false,
        "resizable": false,
        "maximizable": false,
        "minimizable": true,
        "closable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "center": true,
        "visible": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self' https://github.com",
      "devCsp": null,
      "freezePrototype": true,
      "dangerousDisableAssetCspModification": false
    }
  },

  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi", "app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "assets/**/*"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "displayLanguageSelector": false,
        "languages": ["Russian"],
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      },
      "allowDowngrades": false
    },
    "createUpdaterArtifacts": "v1Compatible",
    "externalBin": []
  },

  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/ShieldProjectsLTD/HytaleRU.app/releases/latest/download/latest.json"
      ],
      "pubkey": "env://TAURI_SIGNING_PUBLIC_KEY"
    }
  }
}
